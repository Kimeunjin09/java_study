package ch05;

public class Ex5_1 {

	public static void main(String[] args) {
		
		// 배열이란?
		// 같은 타입의 여러 변수 하나의 묶음으로 다루는 것
		
		// ex) int[] score  = new int[5];
		// int값 5개를 저장할수있는 배열을 만들겠다, 저장공간에 이름이 없는 상태
		// 0번부터 연속적으로 번호가 붙음 == 배열의 index
		// 배열을 다루기 위해서는 참조변수가 필요함
		// 각 저장공간에 이름을 붙이는대신 참조변수에 이름을 주고 참조변수를 통해 저장공간을 다룸.
		// 참조변수와 배열의 번호를 이용해 저장공간을 사용함
		// ex) score[0], score[1]...
		// 배열의 각 저장공간은 연속적임 (붙어있다)
		
		
		// 배열의 선언과 생성
		// 배열도 변수처럼 사용하기위해 선언을하고 생성을 해야 실제 저장공간이 만들어짐.
		
		// 배열의 선언 : 배열을 다루기 위한 참조변수의 선언
		// 변수는 선언하는 순간 저장공간이 만들어짐
		
		// [배열의 선언 방법]
		// 1. 타입[] 변수 이름; // 배열기호가 타입의 일부라 보기때문에 java에서는 1번 주로사용
		// 2. 타임 변수이름[]; // c언어와 비슷한스타일
		
		// 타입[] 변수이름; -> 배열을 선언(배열을 다루기 위한 참조변수 선언)
		// 변수이름 = new 타입[길이]; -> 배열을 생성(실제 저장공간을 생성)
		
		int[] score; // int타입의 배열을 다루기 위한 참조변수 score선언
		score = new int[5]; // int타입의 값5개를 저장할 수 있는 배열 생성
		// 주소값이 참조변수 score에 저장되며 참조변수와 배열이 연결됨
		// 참조변수의 이름을 이용해 저장공간을 변수처럼사용
		
		// 배열의 인덱스 : 각 요소(저장공간)에 자동으로 붙는 일련 번호
		// 인덱스의 범위는 0부터 '배열길이-1까지'
		// int[] score = new int[5]라면 배열길이는 0~5-1인 0~4를 의미
		
		// 저장공간 하나를 배열의 요소라고함.
		
		
		// 예제
		
		//int[] score2; // 1. 배열 score2를 선언(참조변수)
		//score2 = new int[5]; // 2. 배열의 생성(int저장공간 x 5)
		
		int[] score2 = new int[5]; // 배열의 선언과 생성을 동시에
		score2[3] = 100;
		
		System.out.println("score2[0]=" + score2[0]); //배열에 값이 잘 저장됐나 확인
		System.out.println("score2[1]=" + score2[1]); 
		System.out.println("score2[2]=" + score2[2]); 
		System.out.println("score2[3]=" + score2[3]); 
		System.out.println("score2[4]=" + score2[4]); 
		
		int value = score2[3];
		System.out.println("value=" + value);
	}

}
